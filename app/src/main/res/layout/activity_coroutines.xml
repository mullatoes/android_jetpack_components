<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".coroutines.CoroutinesActivity">

        <Button
            android:id="@+id/download_user_data_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Download User Data"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/click_here_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Click Here"
            app:layout_constraintEnd_toEndOf="@+id/download_user_data_btn"
            app:layout_constraintStart_toStartOf="@+id/download_user_data_btn"
            app:layout_constraintTop_toBottomOf="@+id/download_user_data_btn" />

        <TextView
            android:id="@+id/textView_user_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="TextView"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/click_here_btn"
            app:layout_constraintStart_toStartOf="@+id/click_here_btn"
            app:layout_constraintTop_toBottomOf="@+id/click_here_btn" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>